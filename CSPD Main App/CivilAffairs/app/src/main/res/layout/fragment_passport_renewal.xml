<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DepartmentServices.PassportServices.Renewal.PassportRenewalFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_renewal_passport"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_add"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/et_passport_number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/img_renewal_passport"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:inputType="number"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edt_background"
        android:hint="@string/passport_number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/et_calender_passport"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_passport_number"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edt_background"
        android:drawableEnd="@drawable/ic_calendar"
        android:hint="@string/yyyy_mm_dd"
        android:inputType="date"
        android:textAlignment="center"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/et_passport_country"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edt_background"
        android:layout_below="@+id/et_calender_passport"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/country_of_residence"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/et_passport_address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edt_background"
        android:layout_below="@+id/et_passport_country"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/address"
        android:inputType="textPostalAddress"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/bt_submission"
        style="@style/style_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_passport_address"
        android:layout_margin="64dp"
        android:background="@drawable/edt_background"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/submission_of_the_application"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#212121"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:ignore="UnusedAttribute" />

    </RelativeLayout>
</ScrollView>